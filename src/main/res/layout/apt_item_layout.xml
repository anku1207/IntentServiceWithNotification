<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_apt_letter"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@drawable/circular_textview"
            android:gravity="center"
            android:padding="10dp"
            android:text="A"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginEnd="10dp">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.90"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="0.80"
                        android:id="@+id/tv_apt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="Appointment 1"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_apt_deadline"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_weight="0.20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="0 Secounds left"
                        android:textColor="@color/md_red_A700"
                        android:textSize="10sp" />

                </LinearLayout>


                <TextView
                    android:id="@+id/tv_apt_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:padding="5dp"
                    android:text="28 Nov 2019"
                    android:textColor="@color/md_blue_grey_900"
                    android:textSize="10sp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/tv_apt_status"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_corner_textview_bg"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="New"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_apt_priority"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/rounded_corner_textview_bg"
                        android:gravity="center"
                        android:padding="5dp"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:textStyle="bold" />


                </LinearLayout>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_apt_warning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Rejected From Above Task"
                    android:textColor="@color/md_red_A700"
                    android:textSize="10sp" />

            </LinearLayout>

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_in_tray_view_more"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.10"
                android:padding="7dp"
                android:src="@drawable/ic_more_horiz_black_24dp" />

        </LinearLayout>

    </LinearLayout>
</layout>